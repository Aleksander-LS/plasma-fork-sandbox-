{
    "packages": ["packages/*"],
    "version": "independent",
    "ignoreChanges": ["*.md", "package-lock.json"],
    "loglevel": "verbose",
    "exact": true,
    "command": {
        "bootstrap": {
            "npmClientArgs": [
                "--no-audit",
                "--no-optional",
                "--loglevel error",
                "--no-progress",
                "--unsafe-perm",
                "--prefer-offline"
            ]
        },
        "publish": {
            "verifyAccess": false
        }
    }
}
